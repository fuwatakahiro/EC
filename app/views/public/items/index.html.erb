<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <div>
        <div class="row">
          <div class="col-12 border">ジャンル検索</div>
        </div>
        <div class="row">
          <% @genres.each do |genre| %>
            <div class="col-12 border-right border-left border-bottom"><%= genre.name %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-9 offset-1 row">
      <div class="col-3 h2">商品一覧</div>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-3">
          <%= link_to item_path(item) do %>
          <%= image_tag item.get_item_image(150,150) %>
          <div>
            <%= item.name %><br>
            <%= item.price %>
          </div>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
