<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <div>
        <div class="row">
          <div class="col-12 border">ジャンル検索</div>
        </div>
        <div class="row">
          <% @genres.each do |genre| %>
            <div class="col-12 border-right border-left border-bottom"><%= genre.name %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-9 offset-1">
      <div class="row">
        <div class="col-5"><%= image_tag @item.get_item_image(200,300) %></div>
        <div class="col-6 offset-1">
          <div class="h2"><%= @item.name %></div>
          <div class="h4"><%= @item.explation %></div>
          <div class="h4 mt-5"><%= @item.price %></div>
          
        </div>
      </div>
    </div>
  </div>
</div>
