<div class="container">
  <div class="row py-4">
    <h2>ジャンル一覧・追加</h1>
  </div>
  <%= form_with model: @genre, url: admin_genres_path,method: :post, class: "row" do |f| %>

    <div class="form-group row col-9">
      <%= f.label :ジャンル名, class: "col-form-label col-sm-2" %>
      <%= f.text_field :name, class: "col-sm-3" %>
      <%= f.submit "新規登録", class: "btn btn-success offset-1 col-sm-3" %>
    </div>
  <% end %>
  <div class="row mt-5">
    <div>
      <div class="row">
        <div class="col-6">ジャンル名</div>
        <div class="col-6"></div>
      </div>
      <div class="row">
        <% @genres.each do |genre| %>
          <div class="col-5 border-top py-2"><%= genre.name %></div>
          <div class="col-3 border-top py-2"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn  btn-success" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
