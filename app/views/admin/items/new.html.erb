<div class="container">
  <div class="row my-3">
    <h2>新規登録</h2>
  </div>
  <div class="row d-flex justify-content-center mt-5">
     <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="form-group row">
      <%= f.label :画像, class: "form_label col-4" %>
      <%= f.file_field :item_image, class: "col-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :商品名, class: "form_label col-4" %>
      <%= f.text_field :name, class: "col-8 form_control" %>
    </div>
    <div class="form-group row">
      <%= f.label :商品説明, class: "form_label col-4" %>
      <%= f.text_area :explation, class: "form_control col-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :値段, class: "form_label col-4" %>
      <%= f.text_field :price, class: "form_control col-7" %>　円
    </div>
    <div class="form-group row">
      <%= f.label :ジャンル, class: "form_label col-4" %>
      <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name), include_blank: '選択してください', class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= f.label :販売ステータス, class: "form_label col4" %>
      <%= f.radio_button :sale_status,true, class: "col-1" %>
      <%= f.label :販売中, class: "col-3 form_label" %>
      <%= f.radio_button :sale_status,false, class: "col-1" %>
      <%= f.label :販売停止, class: "col-3 form_label" %>
    </div>
    <div class="text-center"><%= f.submit "新規登録" ,class: "btn btn-success" %></div>
  <% end %>
  </div>
</div>
